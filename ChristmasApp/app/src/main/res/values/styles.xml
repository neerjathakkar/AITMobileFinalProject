<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeTwo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/forestgreen</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/forestgreen</item>
    </style>

    <style name="OverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/darkred</item>
        <item name="colorAccent">@color/forestgreen</item>
    </style>

</resources>
